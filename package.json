{
  "name": "ultimate-node-stack",
  "packageManager": "yarn@4.0.0-rc.42",
  "license": "MIT",
  "volta": {
    "node": "18.15.0"
  },
  "scripts": {
    "build": "rimraf dist && swc ./src -d dist",
    "start": "node dist/index.js",
    "start:docker": "yarn build && yarn --inspect=0.0.0.0 start",
    "db:console": "docker compose run postgres psql -h localhost -U postgres -d webapp_dev",
    "db:migrate": "knex migrate:latest",
    "docker:db:migrate": "docker compose run backend yarn db:migrate",
    "docker:db:migrate:undo": "docker compose run backend npx knex migrate:down",
    "rebuild:be": "docker compose build backend && docker compose rm --force --stop backend && docker compose up -d backend"
  },
  "dependencies": {
    "@prisma/client": "^4.12.0",
    "express": "^4.18.2",
    "knex": "^2.4.2",
    "morgan": "^1.10.0",
    "pg": "^8.10.0",
    "typescript": "^5.0.3"
  },
  "devDependencies": {
    "@swc/cli": "^0.1.62",
    "@swc/core": "^1.3.46",
    "@swc/helpers": "^0.5.0",
    "@tsconfig/node18": "^1.0.1",
    "@types/eslint": "^8",
    "@types/express": "^4.17.17",
    "@types/morgan": "^1.9.4",
    "@types/node": "^18.15.11",
    "@types/pg": "^8",
    "@typescript-eslint/eslint-plugin": "^5.57.1",
    "@typescript-eslint/parser": "^5.57.1",
    "eslint": "^8.37.0",
    "prisma": "^4.12.0",
    "rimraf": "^4.4.1",
    "ts-node": "^10.9.1"
  }
}
